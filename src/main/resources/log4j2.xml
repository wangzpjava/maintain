<?xml version="1.0" encoding="UTF-8"?>
<configuration status="DEBUG" monitorInterval="30">
    <properties>
        <property name="PATTERN_LOG">%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} %t %-5level [instrument] %logger{1.} %L --- %msg%n}{%throwable{short.fileName}}{FATAL=white,ERROR=red,WARN=blue, INFO=black, DEBUG=green, TRACE=blue}</property>
    </properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${PATTERN_LOG}"/>
        </Console>
    </appenders>
    <loggers>
        <Logger name="org.apache" level="error" />
        <Logger name="org.springframework" level="info" />
        <Logger name="com.alibaba" level="warn"/>
        <root level="INFO">
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>
